{
    "printWidth": 100,
    "tabWidth": 4,
    "endOfLine": "auto",
    "trailingComma": "all",
    "semi": true,
    "singleQuote": false,
    "useTabs": false,
    "singleAttributePerLine": false,

    "overrides": [
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2,
                "parser": "yaml"
            }
        },
        {
            "files": "*.md",
            "options": {
                "printWidth": 200,
                "tabWidth": 2
            }
        },
        {
            "files": ["*.json", ".prettierrc"],
            "options": {
                "parser": "json",
                "trailingComma": "none",
                "tabWidth": 4,
                "plugins": ["prettier-plugin-multiline-arrays"],
                "multilineArraysWrapThreshold": 0
            }
        },
        {
            "files": ["*.{js,ts,jsx,tsx}"],
            "options": {
                "parser": "typescript",
                "tabWidth": 4,
                "plugins": [
                    "prettier-plugin-organize-imports",
                    "prettier-plugin-tailwindcss",
                    "prettier-plugin-multiline-arrays"
                ],
                "organizeImportsSkipDestructiveCodeActions": true,
                "multilineArraysWrapThreshold": 0
            }
        }
    ]
}
