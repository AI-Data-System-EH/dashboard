    "scripts": {
        "build": "next build",
        "start": "next start",
        "dev": "next dev",
        "integrated-code-fix": "yarn run prettier:fix --loglevel error && yarn run lint:fix",
        "lint:fix": "eslint --fix './src/**/*.{js,jsx,ts,tsx}'",
        "prettier:fix": "prettier --write './src/**/*.{js,jsx,ts,tsx}'",
        "check-rules": "yarn dlx eslint-config-prettier './src/**/*.{js,jsx,ts,tsx}'",
        "lint-staged": "lint-staged"
    },
    "lint-staged": {
        "./src/**/*.{js,jsx,ts,tsx}": [
            "prettier --write --cache",
            "eslint --fix"
        ],
        "*.{html,css,scss}": [
            "prettier --write --cache"
        ],
        "*.{json,jsonc}": [
            "prettier --write --cache"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
